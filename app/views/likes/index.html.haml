.top-page
  .top-page__main
    .top-page__main__title
      あなたの「好き」を見つけましょう
    = link_to "「好きを」登録する", new_like_path, class: "top-page__main__btn"
  .top-page__rankings
    .top-page__rankings__ranking
      .like__title
        Top5 Likes
      .like__index
        - @likes_ranking5.each do |like|
          .like{ class: "#{liked?(current_user, like)}"}
            = link_to "#{like.name}", like_path(like), class: "like__name"
    .top-page__rankings__ranking
      .like__title
        = "#{@genre.name}の人気Like"
      .like__index
        - @genre_likes_ranking5.each do |like|
          .like{ class: "#{liked?(current_user, like)}"}
            = link_to "#{like.name}", like_path(like), class: "like__name"